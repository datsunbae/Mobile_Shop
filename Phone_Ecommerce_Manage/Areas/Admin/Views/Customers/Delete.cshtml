@model Phone_Ecommerce_Manage.Models.Customer

@{
    ViewData["Title"] = "Delete Customer";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    AccountUser account = ViewBag.InfoAccount;
}

<div class="main-container">
    <div class="pd-ltr-20 xs-pd-20-10">
        <div class="min-height-200px">
            <div class="pd-20 card-box mb-30">
                <div class="clearfix">
                    <h4 class="text-danger h4">Bạn có muốn xóa khách hàng: @Model.NameCustomer không?</h4>
                </div>
                <div class="wizard-content">
                    <section class="mb-5">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="@Model.NameCustomer"  class="control-label">Tên khách hàng</label>
                                        <input asp-for="@Model.NameCustomer" class="form-control" disabled/>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="@Model.Phone"  class="control-label">Số điện thoại</label>
                                        <input asp-for="@Model.Phone" class="form-control" disabled/>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="@Model.Email"  class="control-label">Email</label>
                                        <input asp-for="@Model.Email" class="form-control" disabled/>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="@Model.Address"  class="control-label">Địa chỉ</label>
                                        <input asp-for="@Model.Address" class="form-control" disabled/>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="@account.UserName"  class="control-label">Tài khoản</label>
                                        <input asp-for="@account.UserName" class="form-control" disabled/>
                                    </div>
                                </div>
                            </div>
            
                        </section>
                         <form asp-action="Delete">
                            <input type="hidden" asp-for="@Model.IdCustomer" />
                            <input type="submit" value="Delete" class="btn btn-danger" /> 
                            <button class="btn btn-primary" asp-action="Index">Back to List</button>
                         </form>
                </div>
            </div>
        </div>
    </div>
</div>

