@model Phone_Ecommerce_Manage.Models.ColorProduct

@{
    ViewData["Title"] = "Xoá màu sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="login-wrap d-flex align-items-center flex-wrap justify-content-center">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6 col-lg-7">
                <img src="~/adminasset/vendors/images/register-page-img.png" alt="" />
            </div>
            <div class="col-md-6 col-lg-5">
                <div class="login-box bg-white box-shadow border-radius-10">
                    <div class="login-title">
                        <h2 class="text-center text-primary">Xoá màu sản phẩm</h2>
                    </div>
                    <form asp-action="Delete">
                        <label asp-for="NameColor"><h6>Tên màu</h6></label>
                        <div class="input-group custom">
                            <input asp-for="NameColor" class="form-control form-control-lg"
                                   type="text" />
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="input-group mb-0">
                                    <input type="hidden" asp-for="IdColor" />
                                    <input type="submit" value="Xoá" class="btn btn-danger" /> &ensp;
                                    <a asp-action="Index" class="btn btn-primary">Quay lại danh sách</a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>