@model Phone_Ecommerce_Manage.Models.Manager

@{
    ViewData["Title"] = "Chỉnh sửa thông tin nhân viên";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-container">
    <div class="pd-ltr-20 xs-pd-20-10">
        <div class="min-height-200px">
            <div class="pd-20 card-box mb-30">
                <div class="clearfix">
                    <h4 class="text-blue h4">Sửa nhân viên: @Model.FullName</h4>
                </div>
                <div class="wizard-content">
                    <form asp-action="Edit" >
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="@Model.IdManager" />
                        <input type="hidden" asp-for="@Model.UserName" />
                        <input type="hidden" asp-for="@Model.CreateDate" />
                        <input type="hidden" asp-for="@Model.LastLogin" />
                        <input type="hidden" asp-for="@Model.IsActive" />


                        <section class="mb-5">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="@Model.FullName"  class="control-label">Tên nhân viên</label>
                                        <input asp-for="@Model.FullName" class="form-control" />
                                        <span asp-validation-for="@Model.FullName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="@Model.Phone"  class="control-label">Số điện thoại</label>
                                        <input asp-for="@Model.Phone" class="form-control" />
                                        <span asp-validation-for="@Model.Phone" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="@Model.Email"  class="control-label">Email</label>
                                        <input asp-for="@Model.Email" class="form-control" />
                                        <span asp-validation-for="@Model.Email" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Quyền</label>
                                        <select asp-for="@Model.IdRole" class="form-control" asp-items="ViewBag.Roles"></select>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                               
                                <div class="col-md-12">
                                    <div class="form-group">
                                         <h5 class="text-blue">Thay đổi mật khẩu</h5>
                                        <label asp-for="@Model.PasswordAccount" class="control-label">Mật khẩu mới (Không bắt buộc)</label>
                                        <input type="password" asp-for="@Model.PasswordAccount" class="form-control"/>
                                    </div>
                                </div>
                            </div>
                        </section>
                        <button type="submit" class="btn btn-primary">Lưu</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



