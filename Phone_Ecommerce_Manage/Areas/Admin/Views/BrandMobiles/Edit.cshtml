@model Phone_Ecommerce_Manage.Models.BrandMobile

@{
    ViewData["Title"] = "Chỉnh sửa thương hiệu";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="login-wrap d-flex align-items-center flex-wrap justify-content-center">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6 col-lg-7">
                <img src="~/adminasset/vendors/images/register-page-img.png" alt="" />
            </div>
            <div class="col-md-6 col-lg-5">
                <div class="login-box bg-white box-shadow border-radius-10">
                    <div class="login-title">
                        <h2 class="text-center text-primary">Cập nhật thương hiệu</h2>
                    </div>
                    <form asp-action="Edit" asp-route-id="@Model.IdBrandMobile" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="IdBrandMobile" />
                        <label asp-for="NameBrand"><h6>Tên thương hiệu</h6></label>
                        <div class="input-group custom">
                            <input asp-for="NameBrand" class="form-control form-control-lg"
                                   type="text" />
                        </div>
                        <label asp-for="ImgBrand"><h6>Hình ảnh</h6></label>
                        <div class="input-group custom">
                            <input name="fImage" asp-for="@Model.ImgBrand" class="form-control form-control-lg form-control-file"
                                   type="file" />
                        </div>
                        <div class="row pb-30">
                            <div class="col-6">
                                <div class="custom-control custom-checkbox">
                                    @if(@Model.IsPublished == true){
                                        <input type="checkbox"
                                           class="custom-control-input"
                                           checked="true"
                                           asp-for="@Model.IsPublished" />
                                    }
                                    else{
                                        <input type="checkbox"
                                           class="custom-control-input"
                                           asp-for="@Model.IsPublished" />
                                    }
                                    <label asp-for="@Model.IsPublished" class="custom-control-label">Công khai</label>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="input-group mb-0">
                                    <button type="submit" class="btn btn-primary">Lưu</button> &ensp;
                                    <button asp-area="Admin" asp-controller="Brands" asp-action="Index" class="btn btn-outline-danger">Quay lại danh sách</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
