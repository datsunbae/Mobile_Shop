@model IEnumerable<Phone_Ecommerce_Manage.Models.BrandMobile>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-container">
    <div>
        <div class="min-height-200px">
            <div class="card-box mb-30">
                <div class="pd-20">
                    <h4 class="text-blue h4">Danh sách thương hiệu</h4>
                    <a asp-area="Admin" asp-controller="BrandMobiles" asp-action="Create" type="button" class="btn btn-primary">
                        Thêm thương hiệu
                    </a>
                </div>
                <div class="pb-20">
                    <table class="data-table table stripe hover nowrap">
                        <thead>
                            <tr>
                                <th>Tên thương hiệu</th>
                                <th class="table-plus datatable-nosort">Hình ảnh</th>
                                <th class="table-plus datatable-nosort">Trạng thái</th>
                                <th class="table-plus datatable-nosort"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.NameBrand</td>
                                    <td>@item.ImgBrand</td>
                                    <td>
                                        @if (item.IsPublished == true)
                                        {
                                            <a>Công khai</a>
                                        }
                                        else{
                                            <a>Không công khai</a>
                                        }
                                    </td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.IdBrandMobile" class="btn btn-primary">Sửa</a>
                                        <a asp-action="Delete" asp-route-id="@item.IdBrandMobile" class="btn btn-danger">Xóa</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
