@model Phone_Ecommerce_Manage.Models.Customer
@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!--====== Section 1 ======-->
<div class="u-s-p-y-60">

    <!--====== Section Content ======-->
    <div class="section__content">
        <div class="container">
            <div class="breadcrumb">
                <div class="breadcrumb__wrap">
                    <ul class="breadcrumb__list">
                        <li class="has-separator">

                            <a href="/Home/Index">Home</a>
                        </li>
                        <li class="is-marked">

                            <a href="/Accounts/ManageAccount">Quản lý tài khoản</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!--====== Section 2 ======-->
<div class="u-s-p-b-60">

    <!--====== Section Content ======-->
    <div class="section__content">
        <div class="dash">
            <div class="container">
                <div class="row">
                    <div class="col-lg-3 col-md-12">

                        <!--====== Dashboard Features ======-->
                        <div class="dash__box dash__box--bg-white dash__box--shadow u-s-m-b-30">
                            <div class="dash__pad-1">

                                <span class="dash__text u-s-m-b-16">Hello, John Doe</span>
                                <ul class="dash__f-list">
                                    <li>
                                        <a href="/Accounts/ManageAccount">Quản lý tài khoản</a>
                                    </li>
                                    <li>
                                        <a class="dash-active" href="/Accounts/Profile">Thông tin tài khoản</a>
                                    </li>
                                    <li>
                                        <a href="/Accounts/AddressBook">Địa chỉ giao hàng</a>
                                    </li>
                                    <li>
                                        <a href="/Accounts/TrackOrder">Theo dõi đơn hàng</a>
                                    </li>
                                    <li>
                                        <a href="/Accounts/Orders">Đơn hàng của tôi</a>
                                    </li>
                                    <li>
                                        <a href="/Accounts/PaymentOption">Tuỳ chọn thanh toán</a>
                                    </li>
                                    <li>
                                        <a href="/Accounts/ReturnsAndCancellations">Đơn hàng đã huỷ hoặc trả về</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="dash__box dash__box--bg-white dash__box--shadow dash__box--w">
                            <div class="dash__pad-1">
                                <ul class="dash__w-list">
                                    <li>
                                        <div class="dash__w-wrap">

                                            <span class="dash__w-icon dash__w-icon-style-1"><i class="fas fa-cart-arrow-down"></i></span>

                                            <span class="dash__w-text">4</span>

                                            <span class="dash__w-name">Đơn hàng đã đặt</span>
                                        </div>
                                    </li>
                                    <li>
                                        <div class="dash__w-wrap">

                                            <span class="dash__w-icon dash__w-icon-style-2"><i class="fas fa-times"></i></span>

                                            <span class="dash__w-text">0</span>

                                            <span class="dash__w-name">Đơn hàng đã huỷ</span>
                                        </div>
                                    </li>
                                    <li>
                                        <div class="dash__w-wrap">

                                            <span class="dash__w-icon dash__w-icon-style-3"><i class="far fa-heart"></i></span>

                                            <span class="dash__w-text">0</span>

                                            <span class="dash__w-name">Sản phẩm yêu thích</span>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <!--====== End - Dashboard Features ======-->
                    </div>
                    <div class="col-lg-9 col-md-12">
                        <div class="dash__box dash__box--shadow dash__box--radius dash__box--bg-white u-s-m-b-30">
                            <div class="dash__pad-2">
                                <h1 class="dash__h1 u-s-m-b-14">Thông tin cá nhân</h1>

                                <span class="dash__text u-s-m-b-30">Look all your info, you could customize your profile.</span>
                                <div class="row">
                                    <div class="col-lg-4 u-s-m-b-30">
                                        <h2 class="dash__h2 u-s-m-b-8">Họ và tên</h2>

                                        <span class="dash__text">@Model.NameCustomer</span>
                                    </div>
                                    <div class="col-lg-4 u-s-m-b-30">
                                        <h2 class="dash__h2 u-s-m-b-8">E-mail</h2>

                                        <span class="dash__text">@Model.Email</span>
                                        <div class="dash__link dash__link--secondary">

                                            <a href="#">Change</a>
                                        </div>
                                    </div>
                                    <div class="col-lg-4 u-s-m-b-30">
                                        <h2 class="dash__h2 u-s-m-b-8">Số điện thoại</h2>

                                        <span class="dash__text">@Model.Phone</span>
                                        
                                    </div>
                                    <div class="col-lg-4 u-s-m-b-30">
                                        <h2 class="dash__h2 u-s-m-b-8">Địa chỉ giao hàng</h2>

                                        <span class="dash__text">@Model.Address</span>
                                    </div>
                                    <div class="col-lg-4 u-s-m-b-30">
                                        <h2 class="dash__h2 u-s-m-b-8">Tài khoản</h2>

                                        <span class="dash__text">@Model.UserName</span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="dash__link dash__link--secondary u-s-m-b-30">

                                            <a data-modal="modal" data-modal-id="#dash-newsletter">Subscribe Newsletter</a>
                                        </div>
                                        <div class="u-s-m-b-16">

                                            <a class="dash__custom-link btn--e-transparent-brand-b-2" asp-controller="Accounts" asp-action="EditAccount">Chỉnh sửa thông tin</a>
                                        </div>
                                        <div>

                                            <a class="dash__custom-link btn--e-brand-b-2" href="#">Thay đổi mật khẩu</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--====== End - Section Content ======-->
</div>
<!--====== End - Section 2 ======-->