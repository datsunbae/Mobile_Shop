@model Phone_Ecommerce_Manage.Models.Customer
@{
    ViewData["Title"] = "Thông tin tài khoản";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!--====== Section 1 ======-->
<div class="u-s-p-y-60">

    <!--====== Section Content ======-->
    <div class="section__content">
        <div class="container">
            <div class="breadcrumb">
                <div class="breadcrumb__wrap">
                    <ul class="breadcrumb__list">
                        <li class="has-separator">

                            <a href="/Home/Index">Home</a>
                        </li>
                        <li class="is-marked">

                            <a href="/Accounts/ManageAccount">Quản lý tài khoản</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!--====== Section 2 ======-->
<div class="u-s-p-b-60">

    <!--====== Section Content ======-->
    <div class="section__content">
        <div class="dash">
            <div class="container">
                <div class="row">
                    @await Html.PartialAsync("_PartialLeftSideBarAccount.cshtml")
                    <div class="col-lg-9 col-md-12">
                        <div class="dash__box dash__box--shadow dash__box--radius dash__box--bg-white u-s-m-b-30">
                            <div class="dash__pad-2">
                                <h1 class="dash__h1 u-s-m-b-14">Thông tin cá nhân</h1>
                                <div class="row">
                                    <div class="col-lg-4 u-s-m-b-30">
                                        <h2 class="dash__h2 u-s-m-b-8">Họ và tên</h2>

                                        <span class="dash__text">@Model.NameCustomer</span>
                                    </div>
                                    <div class="col-lg-4 u-s-m-b-30">
                                        <h2 class="dash__h2 u-s-m-b-8">E-mail</h2>

                                        <span class="dash__text">@Model.Email</span>
                                    </div>
                                    <div class="col-lg-4 u-s-m-b-30">
                                        <h2 class="dash__h2 u-s-m-b-8">Số điện thoại</h2>

                                        <span class="dash__text">@Model.Phone</span>
                                        
                                    </div>
                                    <div class="col-lg-4 u-s-m-b-30">
                                        <h2 class="dash__h2 u-s-m-b-8">Địa chỉ giao hàng</h2>

                                        <span class="dash__text">@Model.Address</span>
                                    </div>
                                    <div class="col-lg-4 u-s-m-b-30">
                                        <h2 class="dash__h2 u-s-m-b-8">Tài khoản</h2>

                                        <span class="dash__text">@Model.UserName</span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="u-s-m-b-16">

                                            <a class="dash__custom-link btn--e-transparent-brand-b-2" asp-controller="Accounts" asp-action="EditAccount">Chỉnh sửa thông tin</a>
                                        </div>
                                        <div>

                                            <a class="dash__custom-link btn--e-brand-b-2" asp-controller="Accounts" asp-action="ChangePassword">Thay đổi mật khẩu</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--====== End - Section Content ======-->
</div>
<!--====== End - Section 2 ======-->