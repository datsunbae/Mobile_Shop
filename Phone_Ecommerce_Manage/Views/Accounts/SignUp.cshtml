@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!--====== Section 1 ======-->
<div class="u-s-p-y-60">

    <!--====== Section Content ======-->
    <div class="section__content">
        <div class="container">
            <div class="breadcrumb">
                <div class="breadcrumb__wrap">
                    <ul class="breadcrumb__list">
                        <li class="has-separator">

                            <a href="/Home/Index">Home</a>
                        </li>
                        <li class="is-marked">

                            <a href="/Accounts/SignUp">Đăng ký tài khoản</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!--====== End - Section 1 ======-->
<!--====== Section 2 ======-->
<div class="u-s-p-b-60">

    <!--====== Section Intro ======-->
    <div class="section__intro u-s-m-b-60">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section__text-wrap">
                        <h1 class="section__heading u-c-secondary">ĐĂNG KÝ TÀI KHOẢN</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--====== End - Section Intro ======-->
    <!--====== Section Content ======-->
    <div class="section__content">
        <div class="container">
            <div class="row row--center">
                <div class="col-lg-6 col-md-8 u-s-m-b-30">
                    <div class="l-f-o">
                        <div class="l-f-o__pad-box">
                            <h1 class="gl-h1">THÔNG TIN CÁ NHÂN</h1>
                            <form class="l-f-o__form">
                                <div class="u-s-m-b-30">

                                    <label class="gl-label" for="reg-fname">HỌ VÀ TÊN *</label>

                                    <input class="input-text input-text--primary-style" type="text" id="reg-fname" placeholder="Nhập họ và tên">
                                </div>
                                <div class="gl-inline">
                                    <div class="u-s-m-b-30">

                                        <!--====== Date of Birth Select-Box ======-->

                                        <span class="gl-label">NGÀY THÁNG NĂM SINH</span>
                                        <div class="gl-dob">
                                            <select class="select-box select-box--primary-style">
                                                <option selected>Tháng</option>
                                                <option value="male">January</option>
                                                <option value="male">February</option>
                                                <option value="male">March</option>
                                                <option value="male">April</option>
                                            </select><select class="select-box select-box--primary-style">
                                                <option selected>Ngày</option>
                                                <option value="01">01</option>
                                                <option value="02">02</option>
                                                <option value="03">03</option>
                                                <option value="04">04</option>
                                            </select><select class="select-box select-box--primary-style">
                                                <option selected>Năm</option>
                                                <option value="1991">1991</option>
                                                <option value="1992">1992</option>
                                                <option value="1993">1993</option>
                                                <option value="1994">1994</option>
                                            </select>
                                        </div>
                                        <!--====== End - Date of Birth Select-Box ======-->
                                    </div>
                                    <div class="u-s-m-b-30">

                                        <label class="gl-label" for="gender">GIỚI TÍNH</label><select class="select-box select-box--primary-style u-w-100" id="gender">
                                            <option selected>Lựa chọn</option>
                                            <option value="male">Nam</option>
                                            <option value="male">Nữ</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="u-s-m-b-30">

                                    <label class="gl-label" for="reg-email">E-MAIL *</label>

                                    <input class="input-text input-text--primary-style" type="text" id="reg-email" placeholder="Nhập E-mail">
                                </div>
                                <div class="u-s-m-b-30">

                                    <label class="gl-label" for="reg-email">ĐỊA CHỈ *</label>

                                    <input class="input-text input-text--primary-style" type="text" id="reg-diachi" placeholder="Nhập địa chỉ">
                                </div>
                                <div class="u-s-m-b-30">

                                    <label class="gl-label" for="reg-email">TÀI KHOẢN *</label>

                                    <input class="input-text input-text--primary-style" type="text" id="reg-taikhoan" placeholder="Nhập tài khoản">
                                </div>
                                <div class="u-s-m-b-30">

                                    <label class="gl-label" for="reg-password">MẬT KHẨU *</label>

                                    <input class="input-text input-text--primary-style" type="text" id="reg-password" placeholder="Nhập mật khẩu">
                                </div>
                                <div class="u-s-m-b-30">

                                    <label class="gl-label" for="reg-password">NHẬP LẠI MẬT KHẨU *</label>

                                    <input class="input-text input-text--primary-style" type="text" id="reg-password" placeholder="Nhập mật khẩu">
                                </div>
                                <div class="u-s-m-b-15">
                                    <a class="btn btn--e-transparent-brand-b-2" href="/Accounts/SignIn">TẠO TÀI KHOẢN</a>
                                </div>

                                <a class="gl-link" href="/Home/Index">Quay lại cửa hàng</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--====== End - Section Content ======-->
</div>
<!--====== End - Section 2 ======-->