@using Microsoft.AspNetCore.Http
@using Phone_Ecommerce_Manage.Models;
@using Phone_Ecommerce_Manage.Utilities

@{
    MobileShop_DBContext contex = new MobileShop_DBContext();
    var customerSession = Context.Session.Get<Customer>("CustomerSession");
    List<OrderBill> listOrderBill = contex.OrderBills.Where(x => x.IdCustomer == customerSession.IdCustomer).ToList();
} 

<div class="col-lg-3 col-md-12">

                        <!--====== Dashboard Features ======-->
                        <div class="dash__box dash__box--bg-white dash__box--shadow u-s-m-b-30">
                            <div class="dash__pad-1">

                                <span class="dash__text u-s-m-b-16">Xin chào, @customerSession.NameCustomer</span>
                                <ul class="dash__f-list">
                                    <li>
                                        <a class="dash-active" asp-controller="Accounts" asp-action="ManageAccount">Tổng quan</a>
                                    </li>
                                    <li>
                                        <a asp-controller="Accounts" asp-action="Profile">Thông tin tài khoản</a>
                                    </li>
                                    <li>
                                        <a asp-controller="Accounts" asp-action="MyOrders">Đơn hàng của tôi</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="dash__box dash__box--bg-white dash__box--shadow dash__box--w">
                            <div class="dash__pad-1">
                                <ul class="dash__w-list">
                                    <li>
                                        <div class="dash__w-wrap">

                                            <span class="dash__w-icon dash__w-icon-style-1"><i class="fas fa-cart-arrow-down"></i></span>

                                            @if(listOrderBill.Count == 0 || listOrderBill == null){
                                                <span class="dash__w-text">0</span>
                                            }
                                            else
                                            {
                                                <span class="dash__w-text">@listOrderBill.Count</span>
                                            }

                                            <span class="dash__w-name">Đơn hàng đã đặt</span>
                                        </div>
                                    </li>
                                    <li>
                                        <div class="dash__w-wrap">

                                            <span class="dash__w-icon dash__w-icon-style-2"><i class="fas fa-times"></i></span>

                                            <span class="dash__w-text">0</span>

                                            <span class="dash__w-name">Đơn hàng đã huỷ</span>
                                        </div>
                                    </li>
                                    <li>
                                        <div class="dash__w-wrap">

                                            <span class="dash__w-icon dash__w-icon-style-3"><i class="far fa-heart"></i></span>

                                            <span class="dash__w-text">0</span>

                                            <span class="dash__w-name">Sản phẩm yêu thích</span>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <!--====== End - Dashboard Features ======-->
                    </div>