@model Phone_Ecommerce_Manage.ModelViews.ResetPassword;
@{
    ViewData["Title"] = "Tạo mới mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!--====== Section 1 ======-->
<div class="u-s-p-y-60">
    <!--====== Section Content ======-->
    <div class="section__content">
        <div class="container">
            <div class="breadcrumb">
                <div class="breadcrumb__wrap">
                    <ul class="breadcrumb__list">
                        <li class="has-separator">
                            <a href="/Home/Index">Home</a>
                        </li>
                        <li class="is-marked">
                            <a href="/Accounts/ManageAccount">Quản lý tài khoản</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!--====== End - Section 1 ======-->
<!--====== Section 2 ======-->
<div class="u-s-p-b-60">
    <!--====== Section Intro ======-->
    <div class="section__intro u-s-m-b-60">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section__text-wrap">
                        <h1 class="section__heading u-c-secondary">TẠO MẬT KHẨU MỚI</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--====== End - Section Intro ======-->
    <!--====== Section Content ======-->
    <div class="section__content">
        <div class="container">
            <div class="row row--center">
                <div class="col-lg-6 col-md-8 u-s-m-b-30">
                    <div class="l-f-o">
                        <div class="l-f-o__pad-box">
                            <h1 class="gl-h1">THAY ĐỔI MẬT KHẢU</h1>
                            <span class="gl-text u-s-m-b-30">Nhập mật khẩu mới để thay đổi mật khẩu</span>
                            <form class="l-f-o__form" asp-controller="Accounts" asp-action="ResetPassword" method="post">
                                <div class="u-s-m-b-30">
                                     <input type="hidden" asp-for="@Model.Email" />
                                     <input type="hidden" asp-for="@Model.Token" />
                                    <label class="gl-label" for="reset-email">NHẬP MẬT KHẨU MỚI *</label>

                                    <input class="input-text input-text--primary-style" type="password"  placeholder="Nhập mật khẩu mới" asp-for="@Model.Password">
                                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                                </div>
                                <div class="u-s-m-b-30">

                                    <label class="gl-label" for="reset-email">NHẬP LẠI MẬT KHẨU *</label>

                                    <input class="input-text input-text--primary-style" type="password" placeholder="Nhập lại mật khẩu" asp-for="@Model.ConfirmPassword">
                                    <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                                </div>
                                <span>@ViewBag.ErrorURL</span>
                                <div class="u-s-m-b-30">
                                    <button class="btn btn--e-transparent-brand-b-2" type="submit">XÁC NHẬN</button>
                                </div>
                                <div class="u-s-m-b-30">
                                    <a class="gl-link" href="/Accounts/SignIn">Quay lại đăng nhập</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--====== End - Section Content ======-->
</div>
<!--====== End - Section 2 ======-->


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");   }
}


