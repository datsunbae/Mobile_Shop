@model Phone_Ecommerce_Manage.ModelViews.HomeProductViewModel
@using Phone_Ecommerce_Manage.Models
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
    MobileShop_DBContext data = new MobileShop_DBContext();
    var category = data.CategoryNews.ToList();
}
<div class="u-s-p-y-90">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-4 col-sm-12">
                <div class="blog-w-master">
                    <div class="u-s-m-b-60">
                        <div class="blog-w">

                            <span class="blog-w__h">SEARCH</span>
                            <form class="blog-search-form">

                                <label for="post-search"></label>

                                <input class="input-text input-text--primary-style" type="text" id="post-search" placeholder="Search">

                                <button class="btn btn--icon fas fa-search" type="submit"></button>
                            </form>
                        </div>
                    </div>
                    <div class="u-s-m-b-60">
                        <div class="blog-w">

                            <span class="blog-w__h">DANH MỤC</span>
                            <ul class="blog-w__list">
                                @foreach (var item in category){
                                    <li>
                                        <a>@item.NameCategory</a>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                    <div class="u-s-m-b-60">
                        <div class="blog-w">

                            <span class="blog-w__h">NGÀY ĐĂNG</span>
                            <ul class="blog-w__list">
                                <li>

                                    <a href="blog-left-sidebar.html">Tháng 1 (1)</a>
                                </li>
                                <li>

                                    <a href="blog-left-sidebar.html">Tháng 2 (3)</a>
                                </li>
                                <li>

                                    <a href="blog-left-sidebar.html">Tháng 10 (4)</a>
                                </li>
                                <li>

                                    <a href="blog-left-sidebar.html">Tháng 11 (1)</a>
                                </li>
                                <li>

                                    <a href="blog-left-sidebar.html">Tháng 12 (1)</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="u-s-m-b-60">
                        <div class="blog-w">

                            <span class="blog-w__h">BÀI VIẾT GẦN ĐÂY</span>
                            <ul class="blog-w__b-l">
                                @foreach (var item in Model.listNews)
                                {
                                    <li>
                                        <div class="b-l__block">
                                            <div class="b-l__date">

                                                <span>@item.CreateDate</span>
                                            </div>

                                            <span class="b-l__h">

                                                <a asp-action="Details" asp-route-id="@item.IdNews">@item.Title</a>
                                            </span>

                                            <span class="b-l__p">@item.DescriptionNew</span>
                                        </div>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                    <div class="u-s-m-b-60">
                        <div class="blog-w">
                            <span class="blog-w__h">COMMENTS GẦN ĐÂY</span>
                            <ul class="blog-w__b-l-2">
                                <li>
                                    <div class="b-l__block">

                                        <span class="b-l__text">admin</span>

                                        <span class="b-l__text">trong</span>

                                        <span class="b-l__h-2">

                                            <a href="blog-detail.html">Life is all about opportunity</a>
                                        </span>
                                    </div>
                                </li>
                                <li>
                                    <div class="b-l__block">

                                        <span class="b-l__text">admin</span>

                                        <span class="b-l__text">trong</span>

                                        <span class="b-l__h-2">

                                            <a href="blog-detail.html">Be More Confident in 30 Seconds</a>
                                        </span>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div>
                        <div class="blog-w">

                            <span class="blog-w__h">TAGS</span>
                            <div class="blog-t-w">

                                <a class="gl-tag btn--e-transparent-hover-brand-b-2" href="blog-left-sidebar.html">Dresses</a>

                                <a class="gl-tag btn--e-transparent-hover-brand-b-2" href="blog-left-sidebar.html">Shirts & Tops</a>

                                <a class="gl-tag btn--e-transparent-hover-brand-b-2" href="blog-left-sidebar.html">Polo Shirts</a>

                                <a class="gl-tag btn--e-transparent-hover-brand-b-2" href="blog-left-sidebar.html">Sweaters</a>

                                <a class="gl-tag btn--e-transparent-hover-brand-b-2" href="blog-left-sidebar.html">Blazers</a>

                                <a class="gl-tag btn--e-transparent-hover-brand-b-2" href="blog-left-sidebar.html">Vests</a>

                                <a class="gl-tag btn--e-transparent-hover-brand-b-2" href="blog-left-sidebar.html">Jackets</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-9 col-md-8 col-sm-12">
                <div class="bp bp--img u-s-m-b-30">
                    @foreach (var item in Model.listNews)
                    {
                        <div class="bp__wrap">
                            <div class="bp__thumbnail">

                                <!--====== Image Code ======-->

                                <a class="aspect aspect--bg-grey aspect--1366-768 u-d-block" href="blog-detail.html">

                                    <img class="aspect__img" src="@item.Thumb"/>
                                </a>
                                <!--====== End - Image Code ======-->
                            </div>
                            <div class="bp__info-wrap">
                                <div class="bp__stat">

                                    <span class="bp__stat-wrap">

                                        <span class="bp__publish-date">

                                            <a href="blog-left-sidebar.html">

                                                <span>@item.CreateDate</span>
                                            </a>
                                        </span>
                                    </span>

                                    <span class="bp__stat-wrap">

                                        <span class="bp__author">

                                            <a>Dayle</a>
                                        </span>
                                    </span>

                                    <span class="bp__stat-wrap">

                                        <span class="bp__comment">

                                            <a href="blog-detail.html">
                                                <i class="far fa-comments u-s-m-r-4"></i>

                                                <span>8</span>
                                            </a>
                                        </span>
                                    </span>
                                </div>

                                <span class="bp__h1">

                                    <a asp-action="Details" asp-route-id="@item.IdNews">@item.Title</a>
                                </span>
                                <p class="bp__p">@item.DescriptionNew</p>
                                <div class="gl-l-r">
                                    <div>

                                        <span class="bp__read-more">

                                            <a asp-action="Details" asp-route-id="@item.IdNews">Đọc thêm</a>
                                        </span>
                                    </div>
                                    <ul class="bp__social-list">
                                        <li>

                                            <a class="s-fb--color" href="#"><i class="fab fa-facebook-f"></i></a>
                                        </li>
                                        <li>

                                            <a class="s-tw--color" href="#"><i class="fab fa-twitter"></i></a>
                                        </li>
                                        <li>

                                            <a class="s-insta--color" href="#"><i class="fab fa-instagram"></i></a>
                                        </li>
                                        <li>

                                            <a class="s-wa--color" href="#"><i class="fab fa-whatsapp"></i></a>
                                        </li>
                                        <li>

                                            <a class="s-gplus--color" href="#"><i class="fab fa-google-plus-g"></i></a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <nav class="post-center-wrap u-s-p-y-60">

                    <!--====== Pagination ======-->
                    <ul class="blog-pg">
                        <li class="blog-pg--active">

                            <a href="blog-left-sidebar.html">1</a>
                        </li>
                        <li>

                            <a class="fas fa-angle-right" href="blog-left-sidebar.html"></a>
                        </li>
                    </ul>
                    <!--====== End - Pagination ======-->
                </nav>
            </div>
        </div>
    </div>
</div>

